<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>component</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>jar</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>it.mulders.brainfuck-jvm:brainfuck-jvm:jar:*</include>
            </includes>
            <outputDirectory>jre/languages/bf</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>it.mulders.brainfuck-jvm:brainfuck-launcher:jar:*</include>
            </includes>
            <outputDirectory>jre/languages/bf/launcher</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>META-INF/MANIFEST.MF</exclude>
            </excludes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/src/main/scripts/bf</source>
            <outputDirectory>jre/languages/bf/bin</outputDirectory>
        </file>
    </files>
</assembly>